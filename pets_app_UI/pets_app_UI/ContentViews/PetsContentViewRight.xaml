<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pets_app_laura_gonzalez.ContentViews.PetsContentViewRight">
  
    <ContentView.Content>
        <Grid Grid.Row="1" RowDefinitions="Auto" ColumnDefinitions="*,*" ColumnSpacing="20">
            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="{Binding BackgroundColor}" CornerRadius="15"  Margin="0,40,0,5"/>
            <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="Auto" ColumnDefinitions="*,*" ColumnSpacing="0" Padding="10,0,10,0">
                <Label Grid.Column="0" Grid.Row="0" Text="{Binding Category}" TextColor="#1a2e35" FontSize="18" VerticalTextAlignment="Center"  Padding="0,20,0,0"/>
                <Image Grid.Column="1" Grid.Row="0" Source="{Binding Image}"  HeightRequest="120" WidthRequest="120" Aspect="AspectFill" VerticalOptions="End"/>
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>